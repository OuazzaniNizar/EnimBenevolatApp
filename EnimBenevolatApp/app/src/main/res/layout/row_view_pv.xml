<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <TextView
            android:focusable="false"
            android:focusableInTouchMode="false"
            android:shadowColor="#A8A8A8"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Nombre de présents :"
            android:id="@+id/textView33"
            android:radius="14dp"
            android:textColor="@color/gris"
            android:gravity="fill_horizontal|center_vertical|start|fill_vertical"
            android:layout_marginLeft="10dp"
            android:layout_gravity="center_vertical"
            android:inputType="textMultiLine" />

        <TextView
            android:focusable="false"
            android:focusableInTouchMode="false"
            android:shadowColor="#A8A8A8"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="@string/nombre_presents"
            android:id="@+id/nombre_presents"
            android:radius="14dp"
            android:textColor="@color/gris"
            android:gravity="fill_horizontal|center_vertical|start|fill_vertical"
            android:layout_weight="1"
            android:layout_marginLeft="10dp"
            android:layout_gravity="center_vertical"
            android:inputType="textMultiLine" />

        <TextView
            android:focusable="false"
            android:focusableInTouchMode="false"
            android:shadowColor="#A8A8A8"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/id_pv"
            android:radius="14dp"
            android:textColor="@color/gris"
            android:gravity="fill_horizontal|center_vertical|start|fill_vertical"
            android:layout_weight="0.2"
            android:layout_marginLeft="10dp"
            android:layout_gravity="center_vertical"
            android:textStyle="bold"
            android:inputType="text"
            android:visibility="invisible"
            android:text="ID" />

    </LinearLayout>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:id="@+id/linearLayout5"
        android:visibility="visible" >

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" >

            <TextView
                android:focusable="false"
                android:focusableInTouchMode="false"
                android:shadowColor="#A8A8A8"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="PV ajouté par :"
                android:id="@+id/textView39"
                android:radius="14dp"
                android:textColor="@color/gris"
                android:gravity="center_vertical|start"
                android:layout_weight="0"
                android:layout_marginLeft="10dp"
                android:layout_gravity="center_vertical" />

            <TextView
                android:focusable="false"
                android:focusableInTouchMode="false"
                android:shadowColor="#A8A8A8"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="ajoute_par"
                android:id="@+id/ajoute_par"
                android:radius="14dp"
                android:textColor="@color/bleu"
                android:gravity="center_vertical|start"
                android:layout_weight="0"
                android:layout_marginLeft="10dp"
                android:layout_gravity="center_vertical"
                android:textStyle="bold" />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:id="@+id/details_layout"
        android:visibility="visible">

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/contour_gris"
            android:layout_marginTop="5dp">

            <TextView
                android:focusable="false"
                android:focusableInTouchMode="false"
                android:shadowColor="#A8A8A8"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:text="@string/detail_pv"
                android:id="@+id/detail_pv"
                android:radius="14dp"
                android:textColor="@color/gris"
                android:gravity="center_vertical|start"
                android:layout_weight="0"
                android:layout_marginLeft="10dp"
                android:layout_gravity="center_vertical" />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility="invisible">

        <TextView
            android:focusable="false"
            android:focusableInTouchMode="false"
            android:shadowColor="#A8A8A8"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="url_photo"
            android:id="@+id/url_photo"
            android:radius="14dp"
            android:textColor="@color/gris"
            android:gravity="center_vertical|start"
            android:layout_weight="0"
            android:layout_marginLeft="10dp"
            android:layout_gravity="center_vertical" />
    </LinearLayout>

</LinearLayout>