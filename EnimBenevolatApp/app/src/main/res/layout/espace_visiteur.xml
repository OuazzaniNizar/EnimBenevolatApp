<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    tools:context="com.example.ensmr.enimbenevolatapp.EspaceVisiteur">

    <include
        layout="@layout/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/scrollView"
        android:layout_gravity="right" >

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="right">

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="30dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/intro_visiteur"
                    android:id="@+id/textView7" />
            </LinearLayout>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="30dp" >

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:onClick="buttonClick"
                    android:id="@+id/portail_proposition">

                    <ImageView
                        android:focusable="false"
                        android:focusableInTouchMode="false"
                        android:textColor="@color/blanc"
                        android:layout_width="@dimen/button_width"
                        android:layout_height="@dimen/button_width"
                        android:layout_gravity="center"
                        android:background="@drawable/contour" />

                    <TextView
                        android:focusable="false"
                        android:focusableInTouchMode="false"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/portail_proposition"
                        android:id="@+id/textView1"
                        android:layout_gravity="center"
                        android:textStyle="bold"
                        android:gravity="center_horizontal"
                        android:shadowColor="#A8A8A8"
                        android:shadowDx="0"
                        android:shadowDy="0"
                        android:shadowRadius="5"/>
                </LinearLayout>

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="15dp"
                    android:layout_marginBottom="10dp"
                    android:layout_weight="1"
                    android:id="@+id/portail_valeur"
                    android:onClick="buttonClick">

                    <ImageView
                        android:focusable="false"
                        android:focusableInTouchMode="false"
                        android:background="@drawable/contour"
                        android:textColor="@color/blanc"
                        android:layout_width="@dimen/button_width"
                        android:layout_height="@dimen/button_width"
                        android:layout_gravity="center" />

                    <TextView
                        android:focusable="false"
                        android:focusableInTouchMode="false"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/portail_esprit"
                        android:id="@+id/portail_esprit"
                        android:layout_gravity="center"
                        android:textStyle="bold"
                        android:shadowColor="#A8A8A8"
                        android:shadowDx="0"
                        android:shadowDy="0"
                        android:shadowRadius="5"
                        android:gravity="center_horizontal" />
                </LinearLayout>

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:id="@+id/portail_coordonnee"
                    android:onClick="buttonClick">

                    <ImageView
                        android:focusable="false"
                        android:focusableInTouchMode="false"
                        android:background="@drawable/contour"
                        android:textColor="@color/blanc"
                        android:layout_width="@dimen/button_width"
                        android:layout_height="@dimen/button_width"
                        android:id="@+id/portail_ajout_transaction"
                        android:layout_gravity="center" />

                    <TextView
                        android:focusable="false"
                        android:focusableInTouchMode="false"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/nous_contacter"
                        android:id="@+id/portail_contact"
                        android:layout_gravity="center"
                        android:textStyle="bold"
                        android:shadowColor="#A8A8A8"
                        android:shadowDx="0"
                        android:shadowDy="0"
                        android:shadowRadius="5"
                        android:gravity="center_horizontal" />
                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="30dp">

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:onClick="buttonClick"
                    android:id="@+id/portail_documents">

                    <ImageView
                        android:focusable="false"
                        android:focusableInTouchMode="false"
                        android:background="@drawable/contour"
                        android:textColor="@color/blanc"
                        android:layout_width="@dimen/button_width"
                        android:layout_height="@dimen/button_width"
                        android:id="@+id/portail_ajout_pv"
                        android:layout_gravity="center" />

                    <TextView
                        android:focusable="false"
                        android:focusableInTouchMode="false"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/portail_documents"
                        android:id="@+id/textView11"
                        android:layout_gravity="center"
                        android:textStyle="bold"
                        android:shadowColor="#A8A8A8"
                        android:shadowDx="0"
                        android:shadowDy="0"
                        android:shadowRadius="5"
                        android:gravity="center_horizontal" />
                </LinearLayout>

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="5dp"
                    android:layout_marginBottom="10dp"
                    android:layout_weight="1"
                    android:onClick="buttonClick"
                    android:id="@+id/portail_historique">

                    <ImageView
                        android:focusable="false"
                        android:focusableInTouchMode="false"
                        android:background="@drawable/contour"
                        android:textColor="@color/blanc"
                        android:layout_width="@dimen/button_width"
                        android:layout_height="@dimen/button_width"
                        android:layout_gravity="center" />

                    <TextView
                        android:focusable="false"
                        android:focusableInTouchMode="false"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/portail_historique"
                        android:id="@+id/textView10"
                        android:layout_gravity="center"
                        android:textStyle="bold"
                        android:shadowColor="#A8A8A8"
                        android:shadowDx="0"
                        android:shadowDy="0"
                        android:shadowRadius="5"
                        android:gravity="center_horizontal" />
                </LinearLayout>

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:onClick="buttonClick"
                    android:id="@+id/portail_membres">

                    <ImageView
                        android:focusable="false"
                        android:focusableInTouchMode="false"
                        android:background="@drawable/contour"
                        android:textColor="@color/blanc"
                        android:layout_width="@dimen/button_width"
                        android:layout_height="@dimen/button_width"
                        android:layout_gravity="center" />

                    <TextView
                        android:focusable="false"
                        android:focusableInTouchMode="false"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/portail_membre"
                        android:id="@+id/portail_membre"
                        android:layout_gravity="center"
                        android:textStyle="bold"
                        android:shadowColor="#A8A8A8"
                        android:shadowDx="0"
                        android:shadowDy="0"
                        android:shadowRadius="5"
                        android:gravity="center_horizontal" />
                </LinearLayout>


            </LinearLayout>


        </LinearLayout>
    </ScrollView>

</LinearLayout>
