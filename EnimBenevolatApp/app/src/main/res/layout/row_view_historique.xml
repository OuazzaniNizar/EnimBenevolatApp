<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <TextView
            android:focusable="false"
            android:focusableInTouchMode="false"
            android:shadowColor="#A8A8A8"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="programme_action"
            android:id="@+id/programme_action"
            android:radius="14dp"
            android:textColor="@color/gris"
            android:layout_weight="1"
            android:layout_marginLeft="10dp"
            android:layout_gravity="center_vertical"
            android:inputType="textMultiLine"
            android:gravity="center_vertical|center_horizontal" />

        <TextView
            android:focusable="false"
            android:focusableInTouchMode="false"
            android:shadowColor="#A8A8A8"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="name_action"
            android:id="@+id/name_action"
            android:radius="14dp"
            android:textColor="@color/gris"
            android:layout_weight="1"
            android:layout_marginLeft="10dp"
            android:layout_gravity="center_vertical"
            android:inputType="textMultiLine"
            android:gravity="center_vertical|center_horizontal" />

        <TextView
            android:focusable="false"
            android:focusableInTouchMode="false"
            android:shadowColor="#A8A8A8"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/id_historique"
            android:radius="14dp"
            android:textColor="@color/gris"
            android:gravity="fill_horizontal|center_vertical|start|fill_vertical"
            android:layout_weight="0.2"
            android:layout_marginLeft="10dp"
            android:layout_gravity="center_vertical"
            android:textStyle="bold"
            android:inputType="text"
            android:visibility="invisible"
            android:text="ID" />

    </LinearLayout>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:id="@+id/details_layout"
        android:visibility="visible">

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/contour_gris"
            android:layout_marginTop="5dp">

            <TextView
                android:focusable="false"
                android:focusableInTouchMode="false"
                android:shadowColor="#A8A8A8"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:text="details_action"
                android:id="@+id/details_action"
                android:radius="14dp"
                android:textColor="@color/gris"
                android:gravity="center_vertical|start"
                android:layout_weight="0"
                android:layout_marginLeft="10dp"
                android:layout_gravity="center_vertical" />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility="invisible">

        <ImageView
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:id="@+id/image_action"
            android:layout_gravity="center"
            android:layout_marginTop="5dp"
            android:background="@drawable/commande_photo" />

        <TextView
            android:focusable="false"
            android:focusableInTouchMode="false"
            android:shadowColor="#A8A8A8"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="url_photo"
            android:id="@+id/url_photo"
            android:radius="14dp"
            android:textColor="@color/gris"
            android:gravity="center_vertical|start"
            android:layout_weight="0"
            android:layout_marginLeft="10dp"
            android:layout_gravity="center_vertical" />
    </LinearLayout>

</LinearLayout>