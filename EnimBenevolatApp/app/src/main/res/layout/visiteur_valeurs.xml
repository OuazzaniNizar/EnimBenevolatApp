<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.ensmr.enimbenevolatapp.VisiteurValeurs">

    <LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center_horizontal"
        android:orientation="vertical" >

        <include
            layout="@layout/toolbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/scrollView4"
            android:layout_gravity="right" >

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="right" >

                <TextView
                    android:layout_width="fill_parent"
                    android:layout_height="match_parent"
                    android:text="@string/intro_valeurs"
                    android:id="@+id/textView19"
                    android:gravity="center_vertical|center_horizontal"
                    android:layout_marginLeft="15dp"
                    android:layout_marginRight="15dp"
                    android:layout_marginTop="30dp" />

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:id="@+id/benevolat"
                    android:onClick="buttonClick" >

                    <LinearLayout
                        android:focusable="false"
                        android:focusableInTouchMode="false"
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="15dp"
                        android:layout_marginRight="15dp"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginTop="10dp"
                        android:id="@+id/linearLayout6" >

                        <ImageView
                            android:focusable="false"
                            android:focusableInTouchMode="false"
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:id="@+id/imageView36"
                            android:src="@drawable/valeur_benevolat"
                            android:layout_margin="8dp"
                            android:layout_gravity="top|center_horizontal" />

                        <TextView
                            android:focusable="false"
                            android:focusableInTouchMode="false"
                            android:layout_width="fill_parent"
                            android:layout_height="match_parent"
                            android:text="BENEVOLAT"
                            android:id="@+id/textView31"
                            android:gravity="center_vertical"
                            android:layout_marginLeft="@dimen/activity_horizontal_margin"
                            android:textStyle="bold"
                            android:textSize="@dimen/sup_fontsize"
                            android:layout_marginRight="@dimen/activity_horizontal_margin" />
                    </LinearLayout>

                    <TextView
                        android:focusable="false"
                        android:focusableInTouchMode="false"
                        android:layout_width="fill_parent"
                        android:layout_height="match_parent"
                        android:text="benevolat text goes here"
                        android:id="@+id/textView32"
                        android:gravity="left|center_vertical"
                        android:layout_marginLeft="15dp"
                        android:layout_marginRight="15dp" />
                </LinearLayout>

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:id="@+id/esprit_equipe"
                    android:onClick="buttonClick">

                    <LinearLayout
                        android:focusable="false"
                        android:focusableInTouchMode="false"
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="15dp"
                        android:layout_marginRight="15dp"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginTop="10dp"
                        android:id="@+id/linearLayout">

                        <ImageView
                            android:focusable="false"
                            android:focusableInTouchMode="false"
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:id="@+id/imageView8"
                            android:src="@drawable/valeur_esprit_equipe"
                            android:layout_margin="8dp"
                            android:layout_gravity="top|center_horizontal" />

                        <TextView
                            android:focusable="false"
                            android:focusableInTouchMode="false"
                            android:layout_width="fill_parent"
                            android:layout_height="match_parent"
                            android:text="ESPRIT D EQUIPE"
                            android:id="@+id/textView20"
                            android:gravity="center_vertical"
                            android:layout_marginLeft="@dimen/activity_horizontal_margin"
                            android:textStyle="bold"
                            android:textSize="@dimen/sup_fontsize"
                            android:layout_marginRight="@dimen/activity_horizontal_margin" />
                    </LinearLayout>

                    <TextView
                        android:focusable="false"
                        android:focusableInTouchMode="false"
                        android:layout_width="fill_parent"
                        android:layout_height="match_parent"
                        android:text="esprit d&apos;equipe text goes here"
                        android:id="@+id/textView26"
                        android:gravity="left|center_vertical"
                        android:layout_marginLeft="15dp"
                        android:layout_marginRight="15dp" />
                </LinearLayout>

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:id="@+id/innovation"
                    android:onClick="buttonClick" >

                    <LinearLayout
                        android:focusable="false"
                        android:focusableInTouchMode="false"
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="15dp"
                        android:layout_marginRight="15dp"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginTop="10dp"
                        android:id="@+id/linearLayout4" >

                        <ImageView
                            android:focusable="false"
                            android:focusableInTouchMode="false"
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:id="@+id/imageView35"
                            android:src="@drawable/valeur_innovation"
                            android:layout_margin="8dp"
                            android:layout_gravity="top|center_horizontal" />

                        <TextView
                            android:focusable="false"
                            android:focusableInTouchMode="false"
                            android:layout_width="fill_parent"
                            android:layout_height="match_parent"
                            android:text="INNOVATION"
                            android:id="@+id/textView28"
                            android:gravity="center_vertical"
                            android:layout_marginLeft="@dimen/activity_horizontal_margin"
                            android:textStyle="bold"
                            android:textSize="@dimen/sup_fontsize"
                            android:layout_marginRight="@dimen/activity_horizontal_margin" />
                    </LinearLayout>

                    <TextView
                        android:focusable="false"
                        android:focusableInTouchMode="false"
                        android:layout_width="fill_parent"
                        android:layout_height="match_parent"
                        android:text="innovation text goes here"
                        android:id="@+id/textView30"
                        android:gravity="left|center_vertical"
                        android:layout_marginLeft="15dp"
                        android:layout_marginRight="15dp" />
                </LinearLayout>

            </LinearLayout>
        </ScrollView>
    </LinearLayout>
</RelativeLayout>
