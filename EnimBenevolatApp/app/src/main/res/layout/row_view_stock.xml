<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <ImageView
            android:focusable="false"
            android:focusableInTouchMode="false"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:id="@+id/imageView29"
            android:src="@drawable/commande_man"
            android:layout_margin="4dp"
            android:layout_gravity="center" />

        <TextView
            android:focusable="false"
            android:focusableInTouchMode="false"
            android:shadowColor="#A8A8A8"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="AjoutÃ© par :"
            android:id="@+id/textView40"
            android:radius="14dp"
            android:textColor="@color/gris"
            android:gravity="center_vertical|start"
            android:layout_weight="0"
            android:layout_marginLeft="10dp"
            android:layout_gravity="center_vertical" />

        <TextView
            android:focusable="false"
            android:focusableInTouchMode="false"
            android:shadowColor="#A8A8A8"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="ajoute par"
            android:id="@+id/ajoute_par_stock"
            android:radius="14dp"
            android:textColor="@color/bleu"
            android:gravity="fill_horizontal|center_vertical|start|fill_vertical"
            android:layout_weight="1"
            android:layout_marginLeft="10dp"
            android:layout_gravity="center_vertical"
            android:inputType="textMultiLine"
            android:textStyle="bold" />

        <TextView
            android:focusable="false"
            android:focusableInTouchMode="false"
            android:shadowColor="#A8A8A8"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/id_stock"
            android:radius="14dp"
            android:textColor="@color/gris"
            android:gravity="fill_horizontal|center_vertical|start|fill_vertical"
            android:layout_weight="0.2"
            android:layout_marginLeft="10dp"
            android:layout_gravity="center_vertical"
            android:textStyle="bold"
            android:inputType="text"
            android:visibility="invisible"
            android:text="ID" />

    </LinearLayout>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:id="@+id/linearLayout2"
        android:visibility="visible" >

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" >

            <ImageView
                android:focusable="false"
                android:focusableInTouchMode="false"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:id="@+id/imageView10"
                android:src="@drawable/commande_calendar"
                android:layout_margin="4dp"
                android:layout_gravity="top" />

            <TextView
                android:focusable="false"
                android:focusableInTouchMode="false"
                android:shadowColor="#A8A8A8"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="rapport"
                android:id="@+id/date_stock"
                android:radius="14dp"
                android:textColor="@color/gris"
                android:gravity="center_vertical|start"
                android:layout_weight="0"
                android:layout_marginLeft="10dp"
                android:layout_gravity="center_vertical" />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:id="@+id/details_layout"
        android:visibility="visible">

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:focusable="false"
                android:focusableInTouchMode="false"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:id="@+id/imageView30"
                android:src="@drawable/commande_report"
                android:layout_margin="4dp"
                android:layout_gravity="top" />

            <TextView
                android:focusable="false"
                android:focusableInTouchMode="false"
                android:shadowColor="#A8A8A8"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="date d&apos;ajout"
                android:id="@+id/rapport_stock"
                android:radius="14dp"
                android:textColor="@color/gris"
                android:gravity="center_vertical|start"
                android:layout_weight="0"
                android:layout_marginLeft="10dp"
                android:layout_gravity="center_vertical" />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility="invisible">

        <TextView
            android:focusable="false"
            android:focusableInTouchMode="false"
            android:shadowColor="#A8A8A8"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="url_photo"
            android:id="@+id/url_photo_stock"
            android:radius="14dp"
            android:textColor="@color/gris"
            android:gravity="center_vertical|start"
            android:layout_weight="0"
            android:layout_marginLeft="10dp"
            android:layout_gravity="center_vertical" />
    </LinearLayout>

</LinearLayout>